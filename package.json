{
  "name": "cardano-microservice",
  "version": "0.0.1",
  "description": "",
  "author": "reza gazeri",
  "private": true,
  "license": "UNLICENSED",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run lint:fix"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:default": "rm -rf dist && set NODE_ENV=default&& nest start --watch",
    "start:dev": "rm -rf dist && set NODE_ENV=development&& nest start --watch",
    "start:stage": "NODE_ENV=staging node dist/main",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint:fix": "eslint --fix . --ext .ts",
    "lint": "eslint . --ext .ts",
    "test": "set NODE_ENV=test&& jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@emurgo/cardano-serialization-lib-nodejs": "^8.0.0",
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/microservices": "^8.0.6",
    "@nestjs/mongoose": "^8.0.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/typeorm": "^7.1.5",
    "@polkadot/keyring": "^7.2.1",
    "@polkadot/util": "^7.2.1",
    "axios": "^0.21.1",
    "bignumber.js": "^9.0.1",
    "bip39": "^3.0.4",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "config": "^3.3.6",
    "csv-parser": "^3.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "isomorphic-fetch": "^3.0.0",
    "joi": "^17.4.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.13.7",
    "mongoose-paginate-v2": "^1.4.2",
    "nats": "^2.1.0",
    "node-nats-streaming": "^0.3.2",
    "pg": "^8.5.1",
    "random-words": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "typeorm": "^0.2.31",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.15.0",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
